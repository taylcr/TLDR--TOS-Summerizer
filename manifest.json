{
  "manifest_version": 2,
  "name": "ToS Analyzer",
  "description": "Retrieve and analyze the terms of service from any website.",
  "version": "1.0",
  "permissions": [
    "activeTab",
    "storage",
    "downloads",
    "https://*/*",
    "http://*/*"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": "default_icon.png"
  }
}
